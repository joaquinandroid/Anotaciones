<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtVNosotros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOSOTROS"
        android:textColor="#03FA0D"
        android:textSize="25dp"
        android:shadowColor="#000000"
        android:shadowRadius="5"
        android:shadowDy="2"
        android:shadowDx="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/btn1Nosotros"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="52dp"
        android:text="1"
        android:textSize="25dp"
        android:backgroundTint="@color/verde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtVNosotros"></Button>

    <Button
        android:id="@+id/btn2Nosotros"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="84dp"
        android:text="2"
        android:backgroundTint="@color/verde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn1Nosotros"></Button>

    <Button
        android:id="@+id/btn3Nosotros"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="84dp"
        android:text="3"
        android:backgroundTint="@color/verde"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn2Nosotros"></Button>


    <TextView
        android:id="@+id/txtVNosotrosTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#03FA0D"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.309"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3Nosotros"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/txtVEllos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ELLOS"
        android:textColor="#FA0458"
        android:textSize="25dp"
        android:shadowColor="#000000"
        android:shadowRadius="5"
        android:shadowDy="2"
        android:shadowDx="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077" />

    <Button
        android:id="@+id/btn1Ellos"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="52dp"
        android:text="1"
        android:backgroundTint="@color/rojo"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtVEllos"></Button>

    <Button
        android:id="@+id/btn2Ellos"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_marginStart="252dp"
        android:layout_marginTop="88dp"
        android:text="2"
        android:backgroundTint="@color/rojo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn1Ellos"></Button>

    <Button
        android:id="@+id/btn3Ellos"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="84dp"
        android:text="3"
        android:backgroundTint="@color/rojo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn2Ellos"></Button>


    <TextView
        android:id="@+id/txtVEllosTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#FA0458"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.698"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn3Ellos"
        app:layout_constraintVertical_bias="0.131" />


    <Button
        android:id="@+id/btnSalir"
        android:layout_width="254dp"
        android:layout_height="0dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="112dp"
        android:text="SALIR"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtVNosotrosTotal"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>